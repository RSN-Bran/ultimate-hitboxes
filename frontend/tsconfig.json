{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "noResolve": false,
      "noImplicitAny": false,
      "removeComments": true,
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "resolveJsonModule": true
    },
    "include": [
      "src",
      "index.d.ts",
      "src/components/*.tsx"
    ]
}